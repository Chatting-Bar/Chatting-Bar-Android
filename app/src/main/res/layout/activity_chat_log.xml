<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단바 -->

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/Tool_Bar"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:background="@color/HeaderColor"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--        알림함-->

        <ImageButton
            android:id="@+id/alarm_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_alarm" />

        <!--        앱 타이틀-->
        <TextView
            android:id="@+id/App_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="채팅마차"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.517" />


    </androidx.constraintlayout.widget.ConstraintLayout>


<!--채팅 기록 뷰-->
    <ScrollView
        android:id="@+id/chatlogView"
        android:layout_width="match_parent"
        android:layout_height="603dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/chatlogLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

<!--            닫힌 방-->
            <LinearLayout
                android:id="@+id/chatLog1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/CloseColor"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/chatLogUserProfileImg1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_profileimg" />

                <LinearLayout
                    android:id="@+id/nick_and_menu1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/host_nickname1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="주방장1"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/chatRoomMenu1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="오늘 축구 응원 모임1" />
                </LinearLayout>
            </LinearLayout>

<!--            열린방-->
            <LinearLayout
                android:id="@+id/chatLog2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/chatLogUserProfileImg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_profileimg" />

                <LinearLayout
                    android:id="@+id/nick_and_menu2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/host_nickname2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="주방장2"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/chatRoomMenu2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="오늘 축구 응원 모임2" />
                </LinearLayout>
            </LinearLayout>

<!--            닫힌방-->
            <LinearLayout
                android:id="@+id/chatLog3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="20dp"
                android:background="@color/CloseColor">

                <ImageView
                    android:id="@+id/chatLogUserProfileImg3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_profileimg" />

                <LinearLayout
                    android:id="@+id/nick_and_menu3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/host_nickname3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:text="주방장3"
                        android:textColor="@color/black"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/chatRoomMenu3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="오늘 축구 응원 모임3" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

<!--    바텀바-->
    <LinearLayout
        android:id="@+id/Bottom_Bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <!--채팅기록 버튼-->

        <Button
            android:id="@+id/chattingList_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_chat_log_on"
            android:text="기록"
            android:textColor="@color/HeaderColor"
            android:textStyle="bold" />

        <!--홈 버튼-->

        <Button
            android:id="@+id/home_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_home_off"
            android:text="홈"
            android:textStyle="bold" />

        <!--검색 버튼 -->

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:drawableTop="@drawable/ic_search"
            android:text="검색"
            android:textStyle="bold"/>


        <!--        설정버튼-->
        <Button
            android:id="@+id/setting_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="?android:attr/borderlessButtonStyle"
            android:drawableTop="@drawable/ic_settings"
            android:text="설정"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>