<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ChatLogUserProfile_img"
            android:src="@drawable/ic_profileimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/ChatLogHost_nickname_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:paddingLeft="20dp"
            android:text="유저"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chatban_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rect"
                android:text="얼리기" />

            <Button
                android:id="@+id/ban_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_rect_fill"
                android:layout_marginLeft="8dp"
                android:textStyle="bold"
                android:text="강퇴" />
        </LinearLayout>

    </LinearLayout>